# Database Configuration
DATABASE_URL=sqlite:///./atlantis.db

# Security
SECRET_KEY=atlantis-dev-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7
PASSWORD_MIN_LENGTH=8

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_LOGIN_ATTEMPTS=5
RATE_LIMIT_LOGIN_WINDOW=300
RATE_LIMIT_REGISTER_ATTEMPTS=3
RATE_LIMIT_REGISTER_WINDOW=600

# Git Settings
GIT_BASE_PATH=./repositories
GIT_MAX_REPO_SIZE_MB=1000
GIT_MAX_FILE_SIZE_MB=10
GIT_DISABLE_PUSH=false
GIT_DISABLE_PULL=false

# Application Settings
APP_NAME=Atlantis API
VERSION=0.1.0
DEBUG=true
ENVIRONMENT=development

# Email Settings (for password reset, verification)
SMTP_HOST=
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_USE_TLS=true
FROM_EMAIL=

# CORS Settings
ALLOWED_HOSTS=http://localhost:3000,http://localhost:5173,http://127.0.0.1:3000,http://127.0.0.1:5173